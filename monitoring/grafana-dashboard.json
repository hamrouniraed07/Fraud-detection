{
  "dashboard": {
    "title": "Fraud Detection API Monitoring",
    "panels": [
      {
        "title": "Total Predictions",
        "targets": [
          {
            "expr": "sum(predictions_total)"
          }
        ],
        "type": "stat"
      },
      {
        "title": "Prediction Rate",
        "targets": [
          {
            "expr": "rate(predictions_total[5m])"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Average Prediction Latency",
        "targets": [
          {
            "expr": "rate(prediction_latency_seconds_sum[5m]) / rate(prediction_latency_seconds_count[5m])"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(prediction_errors_total[5m])"
          }
        ],
        "type": "graph"
      }
    ]
  }
}
